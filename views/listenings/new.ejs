<% layout("layouts/boilerplate") %>
<div class="row mt-3">

  <div class="col-8 offset-2">
    <br><br>
    <h3>Create new Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
             <input name="listing[title]" type="text" class="form-control" placeholder="Add a catchy title" required>
             <div class="valid-feedback">Valid title</div>
             <div class="invalid-feedback">Not a valid title</div>
        </div>
       
        <div class="mb-3">
            <label for="description">description</label>
            <textarea name="listing[description]" class="form-control" required></textarea>
            <div class="valid-feedback">Valid description</div> 
            <div class="invalid-feedback">Not a valid description</div>
        </div>

         <div class="mb-3">
            <label for="image" class="form-label"></label>
            <input name="listing[image]" class="form-control" type="text" id="image" placeholder="Add Image URL">
        </div>

      <div class="row">
        
        
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label" class="form-label">Price</label>
            <input name="listing[price]" class="form-control" placeholder="1200" required>
             <div class="valid-feedback">Valid price</div>
             <div class="invalid-feedback">Not a valid price</div>
        </div>
        <div class="mb-3 col-md-8">
             <label for="country" class="form-label" class="form-label">country</label>
            <input name="listing[country]" type="text" class="form-control" placeholder="India" required>
             <div class="valid-feedback">Valid country</div>
             <div class="invalid-feedback">Not a valid country</div>
        </div>

      </div>
        <div class="mb-3">
            <label for="location" class="form-label" class="form-label">location</label>
            <input name="listing[location]" class="form-control" placeholder="Mumbai, Maharashtra" required>
             <div class="valid-feedback">Valid location</div>
             <div class="invalid-feedback">Not a valid location</div>
        </div>
        
        <button class="btn btn-dark add-btn mt-3" >Add</button>
        
    </form>
    </div>
</div>