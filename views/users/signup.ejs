<% layout("layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup for Wanderlust</h1>
    <div class="col-6 offset-3">
        <form method="post" action="/signup" class="needs-validation" novalidate>

      <div class="mb-3">
            <label for="username" class="form-label">Username</label>
             <input name="username" type="text" class="form-control" id="username" required>
             <div class="valid-feedback">Valid username</div>
             <div class="invalid-feedback">Not a valid username</div>
       </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
             <input name="email" type="email" class="form-control" id="email" required>
       </div>

        <div class="mb-3">
            <label for="passport" class="form-label">password</label>
             <input name="password" type="password" class="form-control" id="passport" required>
       </div>

       <button class="btn btn-success">Signup</button>

        </form>
    </div>
 </div>
